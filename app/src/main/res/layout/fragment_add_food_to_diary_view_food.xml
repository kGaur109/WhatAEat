<!--                    android:text="@string/pcs" />-->

<!--            </TableRow>-->
<!--            &lt;!&ndash;Serving Size pcs&ndash;&gt;-->

            <!--Serving Size gram-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/textViewServingSizeGram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/serving_in" />

                <EditText
                    android:id="@+id/editTextServingSizeGram"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="" />

                <TextView
                    android:id="@+id/textViewGram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/gram" />

            </TableRow>
            <!--Serving Size gram-->

        </TableLayout>

        <!--Add Button-->
        <Button
            android:id="@+id/buttonAddFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_food_diary"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="15sp" />
        <!--Add Button-->

    </LinearLayout>
</ScrollView>