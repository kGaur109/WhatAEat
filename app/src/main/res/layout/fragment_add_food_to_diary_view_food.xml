<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addFoodToDiary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/todo" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Name-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/textViewFoodName_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/textViewFoodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="name" />

            </TableRow>
            <!--Name-->

            <!--Category-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/textViewFoodCategory_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/category"/>

                <TextView
                    android:id="@+id/textViewFoodCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="category" />

            </TableRow>
            <!--Category-->

            <!--Calorie-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/textViewFoodCalorie_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/calories" />

                <TextView
                    android:id="@+id/textViewFoodCalorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="calories" />

            </TableRow>
            <!--Calorie-->

            <!--Serving Size pcs-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/textViewServingSizePcs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/serving_in_pcs" />

                <EditText
                    android:id="@+id/editTextServingSizePcs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

            </TableRow>
            <!--Serving Size pcs-->

            <!--Serving Size gram-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewServingSizeGram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/serving_in_gram" />

                <EditText
                    android:id="@+id/editTextServingSizeGram"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="" />

            </TableRow>
            <!--Serving Size gram-->

        </TableLayout>

        <!--Add Button-->
        <Button
            android:id="@+id/buttonAddFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_food_diary"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="15sp" />
        <!--Add Button-->

    </LinearLayout>
</ScrollView>